<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/redBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-16dp" />

    <RelativeLayout
        android:id="@id/layout"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/background_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/timerDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="00:00:00"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/instructionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/timerDisplay"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="-246dp"
            android:text="Press the button to record"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timerDisplay" />


        <ImageView
            android:id="@+id/assistantLogo"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@id/instructionText"
            android:layout_marginStart="130dp"
            android:layout_marginBottom="-71dp"
            android:src="@drawable/voice"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/instructionText" />

    </RelativeLayout>





    <TextView
        android:id="@+id/recorderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="296dp"
        android:layout_marginBottom="668dp"
        android:text="Recorder"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/navBarImageView"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="360dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/white" />

    <ImageView
        android:id="@+id/voice"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="84dp"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/voice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/white" />

    <ImageView
        android:id="@+id/play"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/play"
        app:tint="@android:color/white"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="84dp" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/settings"
        app:tint="@android:color/white"
        tools:layout_editor_absoluteX="329dp"
        tools:layout_editor_absoluteY="84dp" />

</androidx.constraintlayout.widget.ConstraintLayout>